{
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=7.4.21",
    "ext-pdo": "*",
    "aura/router": "^3.1",
    "monolog/monolog": "^2.3",
    "psr/container": "^1.0",
    "psr/http-message": "^1.0",
    "psr/http-server-middleware": "^1.0",
    "psr/log": "^1.1",
    "robmorgan/phinx": "^0.12.9",
    "symfony/console": "^5.4",
    "twig/twig": "^3.0",
    "zendframework/zend-config-aggregator": "^1.2",
    "zendframework/zend-diactoros": "^2.2",
    "zendframework/zend-httphandlerrunner": "^1.1",
    "zendframework/zend-servicemanager": "^3.4",
    "zendframework/zend-stratigility": "3.0"
  },
  "require-dev": {
    "filp/whoops": "^2.14",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/App/",
      "Framework\\": "src/Framework/",
      "Infrastructure\\": "src/Infrastructure/",
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "serve": "php -S 0.0.0.0:8080 -t public",
    "check": [
      "@cs-check",
      "@test"
    ],
    "test": "phpunit",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "app": "php bin/app.php --ansi",
    "development-enable": "ln -sr config/autoload/development.local.php.dist config/autoload/development.local.php",
    "development-disable": "rm config/autoload/development.local.php"
  }
}
